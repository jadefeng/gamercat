		var gameID = <%= @game.id %>;
		var gameName = "<%= @game.game_name %>";
		if (gameName == "Jumpy Cat") {
			jumpycatGame();
		} else if (gameName == "Jumpy Cat EXTREME") {
			jumpycatExtremeGame();
		} else if (gameName == "Kittenstein") {
			kittensteinGame();
